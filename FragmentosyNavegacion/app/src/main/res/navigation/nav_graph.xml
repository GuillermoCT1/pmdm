<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/welcomeFragment">

    <fragment
        android:id="@+id/welcomeFragment"
        android:name="com.example.fragmentosynavegacion.WelcomeFragment"
        android:label="WelcomeFragment" >
        <action
            android:id="@+id/action_welcomeFragment_to_textFragment"
            app:destination="@id/textFragment" />
    </fragment>
    <fragment
        android:id="@+id/textFragment"
        android:name="com.example.fragmentosynavegacion.TextFragment"
        android:label="TextFragment"
        >
        <action
            android:id="@+id/action_textFragment_to_finalFragment"
            app:destination="@id/finalFragment"
            app:popUpTo="@id/welcomeFragment" />
    </fragment>
    <fragment
        android:id="@+id/finalFragment"
        android:name="com.example.fragmentosynavegacion.FinalFragment"
        android:label="FinalFragment" >
        <argument
            android:name="texto"
            app:argType="string" />
    </fragment>
</navigation>